<div class="container">
  <div class="row">
    <div class=" col-lg-offset-4 col-lg-6 col-md-8 col-sm-offset-5 col-sm-offset-3 col-xs-10 ">
        <%= form_tag(search_path, method: :get, id: "search-form", role: "search",class:"form-inline" ) do  %>
            <div  id="search" >
                <%= text_field_tag 'city', nil, placeholder: "Trouver un logement",  type: "text", class:"form-control"%>
                 <button type="submit" class="btn btn-default">Valider</button>
            </div>
              
         <% end %>
    </div>
  </div>

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3>Nos logements :</h3>
            </div>
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">
          <% @logements.each do |logement| %> <!--link_to "galerie photo" , :id -> logement.id-->   
            <div class="col-md-3 col-sm-4 hero-feature">
                <div class="thumbnail">
                    <img src="<%= logement.image.url %>" alt="" class="img_home">
                    <div class="caption">
                        <h5 class="desc_home"><%= logement.city.capitalize %>, <%= logement.desc_home %> </h5>
                        
                        <p>
                            <h5 class="price"><%= logement.price %> â‚¬ </h5><%= link_to "Plus d'infos" ,galerie_path(:id => logement.id)%>
                            
                        </p>
                    </div>
                </div>
            </div>
          <% end %>
            
        </div>
       
        
</div>
    <!-- /.container -->
